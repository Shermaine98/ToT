<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contextClickable="false"
    android:orientation="vertical"
    tools:context="com.example.atayansy.tot.FilterMenus">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#a89179"
        android:scaleType="centerCrop"
        android:src="@drawable/woodbg"
        android:tint="#63dbcfc2" />

    <TextView
        android:id="@+id/FilterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a8d4d3ca"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="FILTER"
        android:textSize="30dp"
        />

    <LinearLayout
        android:id="@+id/layout_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/FilterText"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <Switch
            android:id="@+id/ms_nearMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Near Me Location"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/sn_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1" />


        <Switch
            android:id="@+id/ms_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Set Budget"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/sn_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif-thin"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/selectedBudgetLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif-thin"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#64010101"
            android:orientation="horizontal"
            android:padding="8dp">
            <!--TODO: button to edit -->
            <ImageButton
                android:id="@+id/button_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#005f5f5f"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_home_black_24dp" />

            <ImageButton
                android:id="@+id/button_randomize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#005f5f5f"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_grade_black_24dp" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
