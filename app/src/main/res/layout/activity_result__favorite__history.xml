<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.atayansy.tot.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Fh_ResultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c2534d"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="FAVORITES"
            android:textColor="#ebebeb"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvfh_foodescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvFh_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_removeFromFave"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#d74a4a"
            android:text="X"
            android:textAllCaps="false"
            android:textColor="#f3f3f3" />


        <ImageView
            android:id="@+id/tvFh_foodImage"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="food description" />

        <ListView
            android:id="@+id/listview_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>


</RelativeLayout>
