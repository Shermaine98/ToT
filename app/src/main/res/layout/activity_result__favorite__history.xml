<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="45dp"
    tools:context="com.example.atayansy.tot.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Fh_ResultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a8d4d3ca"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="FAVORITE"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvFh_fodName"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="foodName"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvfh_foodescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="food description"
            android:textSize="17sp"
            android:fontFamily="sans-serif-thin" />

        <TextView
            android:id="@+id/tvFh_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Price: 100"
            android:textSize="17sp"
            android:fontFamily="sans-serif-thin" />

        <ImageView
            android:id="@+id/tvFh_foodImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/food_temp1"
            android:text="food description" />

    </LinearLayout>


</RelativeLayout>
